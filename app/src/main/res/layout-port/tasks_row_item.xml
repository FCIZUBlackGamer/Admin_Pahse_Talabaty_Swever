<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,1,2,3,4,5,6,7,8">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/white">

                <Button
                    android:layout_width="160dp"
                    android:maxLines="6"
                    android:maxWidth="160dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:id="@+id/start"
                    android:layout_gravity="center"
                    android:background="@drawable/button_shape"
                    android:gravity="center"
                    android:text=" مراسلة"
                    android:fontFamily="@font/changalight"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="160dp"
                    android:maxLines="6"
                    android:maxWidth="160dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:id="@+id/show"
                    android:layout_gravity="center"
                    android:background="@drawable/button_shape"
                    android:gravity="center"
                    android:text=" تفاصيل"
                    android:fontFamily="@font/changalight"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="160dp"
                    android:maxLines="6"
                    android:maxWidth="160dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:id="@+id/client_name"
                    android:background="@drawable/background_edittext_table"
                    android:gravity="center"
                    android:text=" مؤمن شاهين"
                    android:fontFamily="@font/changalight"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="160dp"
                    android:maxLines="6"
                    android:maxWidth="160dp"
                    android:layout_height="match_parent"
                    android:layout_column="3"
                    android:layout_span="1"
                    android:id="@+id/client_city"
                    android:background="@drawable/background_edittext_table"
                    android:gravity="center"
                    android:text="الزقازيق"
                    android:fontFamily="@font/changalight"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="160dp"
                    android:maxLines="6"
                    android:maxWidth="160dp"
                    android:layout_height="match_parent"
                    android:layout_column="4"
                    android:layout_span="1"
                    android:id="@+id/client_phone"
                    android:background="@drawable/background_edittext_table"
                    android:gravity="center"
                    android:text="01020118856"
                    android:fontFamily="@font/changalight"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="160dp"
                    android:maxLines="6"
                    android:maxWidth="160dp"
                    android:layout_height="match_parent"
                    android:layout_column="5"
                    android:gravity="center"
                    android:id="@+id/time"
                    android:background="@drawable/background_edittext_table"
                    android:text="12:30 م"
                    android:fontFamily="@font/changalight"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="160dp"
                    android:maxLines="6"
                    android:maxWidth="160dp"
                    android:layout_height="match_parent"
                    android:layout_column="6"
                    android:id="@+id/date"
                    android:background="@drawable/background_edittext_table"
                    android:gravity="center"
                    android:text="12-10-2018"
                    android:fontFamily="@font/changalight"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="100dp"
                    android:maxLines="6"
                    android:maxWidth="160dp"
                    android:layout_height="match_parent"
                    android:layout_column="7"
                    android:id="@+id/num"
                    android:background="@drawable/background_edittext_table"
                    android:gravity="center"
                    android:text="5"
                    android:fontFamily="@font/changalight"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="100dp"
                    android:maxLines="6"
                    android:maxWidth="160dp"
                    android:layout_height="match_parent"
                    android:layout_column="8"
                    android:id="@+id/id"
                    android:background="@drawable/background_edittext_table"
                    android:gravity="center"
                    android:text="1"
                    android:fontFamily="@font/changalight"
                    android:textSize="16sp" />

            </TableRow>
        </TableLayout>
    </HorizontalScrollView>
</LinearLayout>