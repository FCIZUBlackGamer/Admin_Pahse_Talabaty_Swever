<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_employee_fragment_employeePp"
            android:background="@color/colorPrimary"
            android:id="@+id/card"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="55dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="أسم الموظف الأول"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/add_employee_fragment_employeenameTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:drawablePadding="5dp"
                            android:gravity="right|center_vertical"
                            android:padding="7dp"
                            android:textDirection="rtl"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="أسم الموظف الاخير"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:drawablePadding="5dp"
                            android:gravity="right|center_vertical"
                            android:padding="7dp"
                            android:textDirection="rtl"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="أسم المستخدم"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:drawablePadding="5dp"
                            android:gravity="right|center_vertical"
                            android:inputType="textEmailAddress"
                            android:padding="7dp"
                            android:textDirection="rtl"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/add_employee_fragment_mailTxtTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="البريد الإلكترونى"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/add_employee_fragment_mailTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:drawablePadding="5dp"
                            android:textDirection="rtl"
                            android:gravity="right|center_vertical"
                            android:inputType="textEmailAddress"
                            android:padding="7dp"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/add_employee_fragment_employmentNameTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="كلمه المرور"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/add_employee_fragment_employmentName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:drawablePadding="5dp"
                            android:gravity="right|center_vertical"
                            android:inputType="textPassword"
                            android:padding="7dp"
                            android:textDirection="rtl"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/add_employee_fragment_employeeManagementTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="تأكيد كلمه المرور"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/add_employee_fragment_employeeManagement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:drawablePadding="5dp"
                            android:gravity="right|center_vertical"
                            android:inputType="textPassword"
                            android:padding="7dp"
                            android:textDirection="rtl"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radiogroup"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="10dp">
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="انثى"
                            android:id="@+id/female"
                            android:textDirection="rtl"
                            android:gravity="start|center"
                            android:fontFamily="@font/changamedium"
                            android:textSize="16sp"/>
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="ذكر"
                            android:checked="true"
                            android:textDirection="rtl"
                            android:id="@+id/male"
                            android:gravity="start|center"
                            android:fontFamily="@font/changamedium"
                            android:textSize="16sp"/>

                    </RadioGroup>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/add_employee_fragment_employeeResponsibilitiesTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="نوع العمل"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/add_employee_fragment_employeeResponsibilities"
                            style="@style/Base.Widget.AppCompat.DropDownItem.Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:drawablePadding="5dp"
                            android:editable="false"
                            android:gravity="right|center_vertical"
                            android:padding="7dp"
                            android:textDirection="rtl"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/add_employee_fragment_employeeWorkplaceNameLinear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/add_employee_fragment_employeeWorkplaceNameTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="طبيعه العمل"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/add_employee_fragment_employeeWorkplaceName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:drawablePadding="5dp"
                            android:editable="false"
                            android:gravity="right|center_vertical"
                            android:padding="7dp"
                            android:textDirection="rtl"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/add_employee_fragment_employeeBranchNameTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="أسم الفرع"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/add_employee_fragment_employeeBranchName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:drawablePadding="5dp"
                            android:gravity="right|center_vertical"
                            android:padding="7dp"
                            android:textDirection="rtl"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/add_employee_fragment_employeePhoneTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="رقم المحمول"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/add_employee_fragment_employeePhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:drawablePadding="5dp"
                            android:gravity="right|center_vertical"
                            android:inputType="phone"
                            android:padding="7dp"
                            android:textDirection="rtl"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="عنوان الموظف"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:drawablePadding="5dp"
                            android:gravity="right|center_vertical"
                            android:padding="7dp"
                            android:textDirection="rtl"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/add_employee_fragment_employeeIdCopyTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="صوره البطاقه"
                            android:fontFamily="@font/changamedium"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/add_employee_fragment_employeeIdCopy"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:maxHeight="30dp"
                            android:maxWidth="30dp"
                            android:minHeight="30dp"
                            android:minWidth="30dp"
                            android:src="@drawable/id" />

                        <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/appear"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="start|bottom"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:elevation="0dp"
                            android:src="@drawable/upload"
                            app:backgroundTint="@color/gray"
                            app:borderWidth="0dp"
                            tools:ignore="UnusedAttribute" />
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/add_employee_fragment_employeePp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/s"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:minHeight="80dp"
            android:minWidth="80dp"
            android:src="@drawable/addemp" />

        <TextView
            android:id="@+id/s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/changabold"
            android:gravity="center"
            android:text="بيانات شخصيه"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/card"
            android:id="@+id/bot"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">

            <Button
                android:id="@+id/first"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:fontFamily="@font/changamedium"
                android:text="التالى"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>


    </RelativeLayout>

</ScrollView>

